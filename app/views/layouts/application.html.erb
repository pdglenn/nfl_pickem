  <head>
    <title>Super Pick'em</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <link rel="icon" type="image/png" href="https://i.imgur.com/52hhH4m.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-106151608-1"></script>

    <!-- pushbar.js - start -->
    <link href="http://aroncey.com/nfl_pickemL/pushbar/pushbar.css" rel="stylesheet" type="text/css">
    <script src="http://aroncey.com/nfl_pickemL/pushbar/pushbar.js"></script>
    <script type="text/javascript">
        var pushbar = new Pushbar({
              blur:true,
              overlay:true,
            });
    </script>
    <!-- pushbar.js - end -->

    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments)};
      gtag('js', new Date());

      gtag('config', 'UA-106151608-1');
    </script>
  </head>
  <body>
    <%= react_component('Topbar', {
      current_user: current_user,
    }) %>
    <div class="row">
      <%= react_component('Sidebar', {}, {class: 'col s2'}) %>

      <%= yield %>
    </div>
    <script type="text/javascript">
      window.current_user = <%= raw current_user.to_json %>;
    </script>
